<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <meta name="csrf-token" content="<%= csrfToken %>">
        <link href="./css/style.css" rel="stylesheet">
        <title>Todo Manager</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="./css/style.css" rel="stylesheet">
        <script>
    var token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    function updateTodo(id, completionStatus) {
      fetch(`/todos/${id}`, {
        method: 'put',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          completed: completionStatus,
          "_csrf": token
        })
      }).then((res) => {
        window.location.reload(true);
      }).catch(err => console.error(err))
    }

    function deleteTodo(id) {
      console.log(id);
      fetch(`/todos/${id}`, {
        method: 'delete',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          "_csrf": token
        })
      }).then((res) => {
        window.location.reload();
      }).catch(err => console.error(err))
    }
        </script>
    </head>
    <body>
       <div class= "grid grid-cols-6">
        <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %> 
        <form class="text-xl " action="/todos" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="flex gap-1 px-6 my-5 border-gray-300">
                <div class="flex-auto">
                    <input type="text" name="title" placeholder="what's next" class="border border-grey-500 rounded text-current w-full p-2" required />
                </div>
            <div class="flex-auto">
                <input type="date" name="dueDate" class="border border-grey-300 rounded w-full p-2 text-current" />
            </div>
            <div class="flex-auto">
                <button type="submit" class="bg-green-600 text-white px-5 py-2 rounded w-full text-current">Add</button>
            </div>  
            </div>
        </form>
        <%- include('todos.ejs', {title: "Overdue", data: overdue}) %>
        <%- include('todos.ejs', {title: "Due Today", data: dueToday}) %>
        <%- include('todos.ejs', {title: "Due Later", data: dueLater}) %>
        <%- include('todos.ejs', {title: "Completed Items", data: completedItems}) %>
    </div>
</div>
    </body>
</html>