<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>
    <%= title %>
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css" />
  <script>
    var token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    function updateTodo(id, setCompletionStatus) {
      fetch(`/todos/${id}`, {
        method: 'put',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          completed: setCompletionStatus,
          "_csrf": token
        })
      }).then((res) => {
        window.location.reload(true);
      }).catch(err => console.error(err))
    }
    function deleteTodo(id) {
      console.log(id);
      fetch(`/todos/${id}`, {
        method: 'delete',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          "_csrf": token
        })
      }).then((res) => {
        window.location.reload();
      }).catch(err => console.error(err))
    }
  </script>
</head>

<body>
  <div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">
      <%- include('header.ejs') %>
      <% if(messages && messages.error && messages.error.length > 0)  { %>
        <% for(var i=0; i<messages.error.length; i++) { %>
                <li> <%= messages.error[i] %></li>
        <% } %>
      <% } %>
          <form action="/todos" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="flex gap-1 py-3">
              <div class="flex items-center text-l mb-2 pt-0.125 pl-6.5">
                <input type="text" placeholder="What's next?" name="title" class="w-6 leading-8 non-italic hover rounded hover:bg-purple-90 flex items-center text-xl text-center w-fit my-3 py-2 rounded hover:bg-purple-90" required />
              </div>
              <div class="flex items-center text-xl col-span-2 my-2 py-1">
                <input type="date" name="dueDate" class=" leading-4 pb-3 italic rounded hover:bg-purple-90  mr-2 border border-gray-200 text-gray-400 text-base px-6 py-3 rounded p-2 mr-2 mb-1" />
              </div>
              <div class="flex items-center items-center text-xl text-center py-2">
                <button type="submit" class="text-white bg-green-600 hover:bg-green-700 font-medium rounded text-medium px-10 py-2 p-2 mr-1 mb-1">Add</button>
              </div>
            </div>
          </form>
          <div class="px-14">
            <%- include('todo.ejs', {title: "Overdue" , data: overdue}) %>
            <%- include('todo.ejs', {title: "Due Today" , data: dueToday}) %>
            <%- include('todo.ejs', {title: "Due Later" , data: dueLater}) %>
            <%- include('todo.ejs', {title: "Completed items" , data: completed}) %> 
          </div>
          <div class="flex align-center text-gray-700 my-4 py-12">
            <button type="submit" class="text-white bg-gray-600 hover:bg-gray-700 font-medium rounded text-medium px-10 mr-2 mb-2"><a href="/signout">Signout</a></button>
          </div>
          </div>
        </div>
    </body>
    </html>